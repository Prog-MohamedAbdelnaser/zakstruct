    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton" >
        <item name="android:buttonTint">@color/radio_button_color</item>
        <item name="android:textAppearance">@style/TextAppearanceRegular.greyish_brown</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="otpStyle" parent="EditText">
        <item name="height">60dp</item>
        <item name="width">60dp</item>
        <item name="android:textSize">35sp</item>
        <item name="android:hint">ــ</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textColorHint">@color/otp_hint_text_color</item>
        <item name="android:backgroundTint">@color/otp_color</item>
        <item name="android:background">@drawable/otp_inactive_background</item>
