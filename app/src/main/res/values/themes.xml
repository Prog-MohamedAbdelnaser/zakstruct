        <item name="android:textColor">@color/white</item>
    </style>

  <style name="TextAppearanceBold.White" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearanceRegular" >
        <item name="android:fontFamily">@font/sst_roman</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="TextAppearanceBold.Tomato">
        <item name="android:textColor">@color/tomato</item>
    </style>
    <style name="TextAppearanceBold.darkBlueGrey">
        <item name="android:textColor">@color/dark_blue_grey</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearanceBold">
        <item name="android:textColor">@color/dark_blue_grey</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearanceBold.dirtyBlue">
        <item name="android:textColor">@color/dirty_blue</item>
    </style>
    <style name="TextAppearanceBold.greenBlue">
        <item name="android:textColor">@color/greeny_blue</item>
    </style>



    <style name="TextAppearanceMedium.greenBlue">
        <item name="android:textColor">@color/greeny_blue</item>
    </style>

       <style name="TextAppearanceRegular.steel">
        <item name="android:textColor">@color/steel</item>
    </style>

    <style name="TextAppearanceRegular.light_grey">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="TextAppearanceBold.Dark">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextAppearanceBold.MidBlue">
        <item name="android:textColor">@color/mid_blue</item>
    </style>

    <style name="MaterialTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeColor">#13646464</item>
        <item name="boxBackgroundColor">#13646464</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:enabled">true</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="errorEnabled">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/windows_blue</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearanceBold</item>
        <item name="hintTextAppearance">@style/TextAppearanceRegular</item>
        <item name="colorControlActivated">@color/lightseagreen</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_input_color_selector</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="android:background">@drawable/background_input_login</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
    </style>




    <style name="Header" parent="TextAppearanceBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

