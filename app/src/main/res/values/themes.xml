<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zaka" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue_grey</item>
        <item name="colorPrimaryVariant">#101e36</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/water_blue</item>
        <item name="colorSecondaryVariant">@color/water_blue</item>
        <item name="colorOnSecondary">@color/water_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Theme.Zaka.login" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/dark_blue_grey</item>
        <item name="colorPrimaryVariant">#101e36</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/water_blue</item>
        <item name="colorSecondaryVariant">@color/water_blue</item>
        <item name="colorOnSecondary">@color/water_blue</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="TextAppearanceBold" >
        <item name="android:fontFamily">@font/sst_arabic_bold</item>
    </style>

    <style name="TextAppearanceMedium" >
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sst_medium</item>
    </style>

    <style name="TextAppearanceRegular" >
        <item name="android:fontFamily">@font/sst_roman</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="TextAppearanceBold.Tomato">
        <item name="android:textColor">@color/tomato</item>
    </style>
    <style name="TextAppearanceBold.darkBlueGrey">
        <item name="android:textColor">@color/dark_blue_grey</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearanceBold">
        <item name="android:textColor">@color/dark_blue_grey</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearanceBold.dirtyBlue">
        <item name="android:textColor">@color/dirty_blue</item>
    </style>
    <style name="TextAppearanceBold.greenBlue">
        <item name="android:textColor">@color/greeny_blue</item>
    </style>

       <style name="TextAppearanceRegular.steel">
        <item name="android:textColor">@color/steel</item>
    </style>

    <style name="TextAppearanceBold.Dark">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TextAppearanceBold.MidBlue">
        <item name="android:textColor">@color/mid_blue</item>
    </style>
    <style name="MaterialTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeColor">#13646464</item>
        <item name="boxBackgroundColor">#13646464</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:enabled">true</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="errorEnabled">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">

        <!--        <item name="android:maxHeight">56dp</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>


        <!--        <item name="android:fontFamily">@font/myriadpro_semibold</item>-->
    </style>




    <style name="Header" parent="TextAppearanceBold">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="labelMeduim.NavyBlue" >
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/sst_medium</item>

    </style>

    <style name="RomanLabelNavyBlue" >
        <item name="android:textColor">@color/navy_blue</item>
        <item name="android:fontFamily">@font/sst_roman</item>

    </style>

    <style name="label.Silver" >
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="label.Silver.roman" >
        <item name="android:textColor">@color/silver</item>
        <item name="android:fontFamily">@font/sst_roman</item>
    </style>


    <style name="blackRoman" >
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sst_roman</item>
    </style>

    <style name="labelBold" >
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sst_arabic_bold</item>
    </style>

    <style name="labelMeduim" >
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sst_medium</item>
    </style>

    <style name="labelNormal" >
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sst_roman</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/background_button_login</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Button.BlueFull" >
        <item name="android:background">@drawable/background_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="MaterialAppButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
<!--        <item name="android:textAppearance">@style/TextAppearanceMedium</item>-->
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">12dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:background">@drawable/background_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
    </style>


    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sst_roman</item>
    </style>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/dark_blue_grey</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/dark_sky_blue</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="indicatorColor">@color/dark_sky_blue</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/water_blue</item>
        <item name="android:textColorSecondary">@color/dark_blue_grey</item>
        <!--  <item name="colorPrimaryVariant">@color/water_blue</item>
          <item name="colorOnPrimary">@color/white</item>
          <!- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue_grey</item>
        <item name="colorSecondaryVariant">@color/dark_blue_grey</item>
        <item name="colorOnSecondary">@color/water_blue</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_5</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextAppearance">

    </style>

    <style name="TextAppearance.ActiveBottomNavigationText">
        <item name="android:textColor">@color/water_blue</item>
    </style>
    <style name="TextAppearance.InActiveBottomNavigationText">
        <item name="android:textColor">@color/dark_blue_grey</item>
    </style>
</resources>