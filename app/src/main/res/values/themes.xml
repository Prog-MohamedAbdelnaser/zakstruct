<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zaka" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MaterialTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintAnimationEnabled">true</item>
        <item name="boxStrokeColor">#13646464</item>
        <item name="boxBackgroundColor">#13646464</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:enabled">true</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="errorEnabled">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">#666666</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">

        <!--        <item name="android:maxHeight">56dp</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>


        <!--        <item name="android:fontFamily">@font/myriadpro_semibold</item>-->
    </style>


    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/background_button_login</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Button.BlueFull" >
        <item name="android:background">@drawable/background_button_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>